@{
    ViewData["Title"] = "Choix multiple";
}

@model List<Relation>

<h1>Multiple Choice Questions</h1>

<form method="post" action="/Examen/ProcessAnswersAdjetive">
    @for (int i = 0; i < Model.Count; i++)
    {
        var relation = Model[i];

        <div>
            <h3>@relation.question.ToString()</h3>
            <ul>
                @foreach (var answer in relation.answerList.OrderBy(a => Guid.NewGuid()))
                {
                    <li>
                        <label>
                            <input type="radio" name="answers[@i]" value="@answer.ToString()" /> @answer.ToString()
                        </label>
                    </li>
                }
            </ul>
        </div>
        <hr />
    }

    <button type="submit">Submit</button>
</form>
